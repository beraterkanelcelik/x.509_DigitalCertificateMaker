<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Main Project", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <ul class="navbar-collapse collapse nav navbar-nav">
                
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("User"))
                        {
                            <li>@Html.ActionLink("MyCertificatse", "MyCertificate", "Home")</li>
                            <li>@Html.ActionLink("Create Certificate", "Create", "Certificate")</li>
                            <li>@Html.ActionLink("Convert Certificate", "Convert", "Certificate")</li>
                            <li>@Html.ActionLink(User.Identity.Name, "MyProfile", "Authentication")</li>
                        }
                        if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("UserList", "UserList", "Home")</li>
                            <li>@Html.ActionLink("UserLogList", "UserLogList", "Home")</li>
                            <li>@Html.ActionLink("MyCertificates", "MyCertificate", "Home")</li>
                            <li>@Html.ActionLink("Create Certificate", "Create", "Certificate")</li>
                            <li>@Html.ActionLink("Convert Certificate", "Convert", "Certificate")</li>
                            <li>@Html.ActionLink(User.Identity.Name, "MyProfile", "Authentication")</li>
                        }
                        <li>@Html.ActionLink("Logout", "Logout", "Authentication")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Register", "Register", "Authentication")</li>
                        <li>@Html.ActionLink("Login", "Login", "Authentication")</li>
                    }
                
                </ul>
            </div>
        </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
